<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_info" android:layout_width="match_parent"
            android:id="@+id/common_info"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TxtPeriods"
            android:layout_below="@id/common_info"
            android:layout_marginTop="10dp"
            android:text="第13期开奖结果"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TxtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="100dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/TxtPeriods"/>

        <TextView
            android:id="@+id/TxtAmount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtResult"
            android:text="投注额"/>

        <TextView
            android:id="@+id/TxtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/TxtAmount"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/TxtResult"
            android:text="30000ACT"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="赢额"
            android:id="@+id/TxtWinAmount"
            android:layout_below="@id/TxtAmount"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/TxtWinAmount"
            android:text="100000ACT"
            android:id="@+id/TxtWinValue"
            android:layout_below="@id/TxtAmount"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="输额"
            android:id="@+id/TxtLostAmount"
            android:layout_below="@id/TxtWinAmount"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/TxtLostAmount"
            android:text="10000ACT"
            android:id="@+id/TxtLostValue"
            android:layout_below="@id/TxtWinAmount"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="爆庄"
            android:id="@+id/TxtBrokenTop"
            android:layout_below="@id/TxtLostAmount"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:text="否"
            android:id="@+id/TxtBZ"
            android:layout_toEndOf="@id/TxtBrokenTop"
            android:layout_below="@id/TxtLostAmount"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="赔率"
            android:id="@+id/TxtOdds"
            android:layout_below="@id/TxtBrokenTop"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:text="5"
            android:id="@+id/TxtOddsValue"
            android:layout_toEndOf="@id/TxtBrokenTop"
            android:layout_below="@id/TxtBrokenTop"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收益额"
            android:id="@+id/TxtTotalAmount"
            android:layout_below="@id/TxtOdds"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:text="5"
            android:id="@+id/TxtTotalValue"
            android:layout_toEndOf="@id/TxtBrokenTop"
            android:layout_below="@id/TxtOddsValue"/>

        <Button
            android:id="@+id/BtnDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细开奖信息"
            android:layout_below="@id/TxtTotalAmount"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>